<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_4x"
    app:cardBackgroundColor="@color/ts_grey_dark"
    app:cardCornerRadius="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/news_topic_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />


        <ImageView
            android:id="@+id/news_topic_check_mark"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:alpha="0.7"
            app:srcCompat="@drawable/ic_checked" />

        <View
            android:id="@+id/news_topic_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="@drawable/gradient_bg" />

        <TextView
            android:id="@+id/content"
            style="@style/CustomStrongFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/grid_8x"
            android:textColor="@color/ts_white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
