<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ts_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_captcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:src="@drawable/gradient_bg" />

    <EditText
        android:id="@+id/captcha"
        style="@style/CustomStrongFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Enter the Captcha"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/authorize_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Authorize"
            android:textColor="@color/ts_white"
            app:backgroundTint="@color/ts_blue" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="@string/title_section8"
            android:textColor="@color/ts_white"
            android:visibility="gone"
            app:backgroundTint="@color/ts_red" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="@dimen/grid_8x"
        android:background="@color/ts_grey_light" />

    <TextView
        android:id="@+id/captcha_loading"
        style="@style/CustomStrongFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_8x"
        android:gravity="center"
        android:text="Captcha is loading"
        android:textColor="@color/ts_grey_dark"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="@dimen/grid_8x"
        android:background="@color/ts_grey_light" />


</LinearLayout>