<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_8x"
    app:cardBackgroundColor="@color/ts_white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_subject"
            style="@style/CustomStrongFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_divider"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ts_blue"
            android:textSize="16sp"
            tools:text="Date 24/11/2016 at 12:30:00" />


        <RelativeLayout
            android:id="@+id/h_divider"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_below="@+id/linear_f"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:background="@color/ts_grey_light" />


        <TextView
            android:id="@+id/textView_timeslot"
            style="@style/CustomStrongFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/ts_grey_dark"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/ts_white"
            android:textSize="16sp"
            tools:text="Subject Code: C-6" />

        <LinearLayout
            android:id="@+id/linear_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_timeslot"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_faculty"
                style="@style/CustomStrongFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:textColor="@color/ts_grey"
                android:textSize="18sp"
                tools:text="Room: C-315" />

            <View
                android:layout_width="0.25dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/ts_grey_light" />

            <TextView
                android:id="@+id/textView_hall"
                style="@style/CustomStrongFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textColor="@color/ts_grey"
                android:textSize="18sp"
                tools:text="Seat: 45" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>