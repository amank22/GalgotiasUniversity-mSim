<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="10/03/2016"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ts_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_time_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_date"
            android:background="@color/ts_grey"
            android:gravity="center"
            android:text="10/03/2016"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ts_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_status"
            style="@style/CustomStrongFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_time_slot"
            android:gravity="center"
            android:text="P"
            android:textColor="@color/ts_grey_dark"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView_subject"
            style="@style/CustomStrongFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_status"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Subject"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ts_grey"
            android:textSize="16sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>