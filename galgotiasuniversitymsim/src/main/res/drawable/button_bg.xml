<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item >
        <shape android:shape="rectangle" >
            <solid android:color="#4099ff" />
            <stroke
                android:width="2dp"
                android:color="#409988" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="#409988" />
            <stroke
                android:width="3dp"
                android:color="#409988" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>